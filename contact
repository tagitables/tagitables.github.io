            <h2>Leave Your Contact</h2>
            <form id="contactForm" action="https://formspree.io/f/mgvwqgkz" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="upload">File Upload:</label>
                    <input type="file" id="upload" name="upload">
                </div>
                <button type="submit">Send</button>
            </form>
            <div id="responseMessage"></div>
        </div>
    </div>

    <script>
        document.getElementById('contactForm').addEventListener('submit', function(event) {
            event.preventDefault();

            const form = event.target;
            const responseMessage = document.getElementById('responseMessage');

            form.querySelector('button').disabled = true;

            const formData = new FormData(form);

            fetch(form.action, {
                method: form.method,
                body: formData,
                headers: { 'Accept': 'application/json' }
            }).then(response => {
                if (response.ok) {
                    responseMessage.textContent = 'Thank you! Your message has been received!';
                    form.reset();
                } else {
                    responseMessage.textContent = 'Oops! There was a problem submitting your form.';
                }
            }).catch(() => {
                responseMessage.textContent = 'Oops! There was a problem submitting your form.';
            }).finally(() => {
                form.querySelector('button').disabled = false;
            });
        });
    </script>
